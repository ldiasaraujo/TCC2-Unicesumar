<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projetoarrastarsoltar.HelloController"
      prefWidth="640" prefHeight="480">

    <Label text="Relacione os itens corretamente" layoutX="50" layoutY="50" />

    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
              prefWidth="640" prefHeight="480">

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <!-- Imagem Dolphin -->
        <StackPane>
            <Button text="Dolphin" onAction="#onInglesButtonClick"/>
        </StackPane>

        <!-- Retângulo do Dolphin -->
        <StackPane>
            <Rectangle fx:id="dropTargetDolphin" width="100.0" height="100.0"
                       fill="#FFFFFF" stroke="#000000" strokeWidth="1.0"/>
            <Label text="Dolphin" StackPane.alignment="CENTER" textFill="#000000"/>
        </StackPane>

    </HBox>

    <!-- Imagem e Retangulo Bird -->
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
          prefWidth="640" prefHeight="480">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <!-- Imagem Bird -->
        <StackPane>
            <Button text="Bird" onAction="#onInglesButtonClick"/>
        </StackPane>

        <!-- Retângulo do Bird -->
        <StackPane>
            <Rectangle fx:id="dropTargetBird" width="100.0" height="100.0"
                       fill="#FFFFFF" stroke="#000000" strokeWidth="1.0"/>
            <Label text="Bird" StackPane.alignment="CENTER" textFill="#000000"/>
        </StackPane>
    </HBox>
</VBox>